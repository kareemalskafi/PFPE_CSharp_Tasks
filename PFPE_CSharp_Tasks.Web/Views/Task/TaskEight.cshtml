using System;

class MyClass
{
    public void DisplayMessage()
    {
        Console.WriteLine("MyClass class has initialized!");
    }
}

class GreetingMessage
{
    public void DisplayIntroduction(string name)
    {
        Console.WriteLine($"Hello All, I am {name}");
    }
}

class FactorialCalculator
{
    public int CalculateFactorial(int number)
    {
        if (number < 0)
        {
            throw new ArgumentException("Factorial is not defined for negative numbers.");
        }

        int result = 1;
        for (int i = 1; i <= number; i++)
        {
            result *= i;
        }
        return result;
    }
}

class ArraySorter
{
    public void SortArray(int[] array)
    {
        Array.Sort(array);
        Console.Write("Sorted array: { ");
        for (int i = 0; i < array.Length; i++)
        {
            Console.Write($"{array[i]}");
            if (i < array.Length - 1)
            {
                Console.Write(", ");
            }
        }
        Console.WriteLine(" }");
    }
}

class DateDifferenceCalculator
{
    public void CalculateDateDifference(DateTime date1, DateTime date2)
    {
        TimeSpan difference = date2 - date1;
        Console.WriteLine($"Difference: {difference.Days / 365} years, {(difference.Days % 365) / 30} months, {difference.Days % 30} days");
    }
}

class StringToDateConverter
{
    public void ConvertStringToDate(string dateString)
    {
        if (DateTime.TryParseExact(dateString, "dd-MM-yyyy", null, System.Globalization.DateTimeStyles.None, out DateTime date))
        {
            Console.WriteLine($"Converted Date: {date.ToString("yyyy-MM-dd")}");
        }
        else
        {
            Console.WriteLine("Invalid date format.");
        }
    }
}

class Program
{
    static void Main()
    {
        // Task 1
        MyClass myClass = new MyClass();
        myClass.DisplayMessage();

        // Task 2
        GreetingMessage greeting = new GreetingMessage();
        greeting.DisplayIntroduction("Scott");

        // Task 3
        FactorialCalculator factorialCalc = new FactorialCalculator();
        int factorialResult = factorialCalc.CalculateFactorial(5);
        Console.WriteLine($"Factorial of 5 is: {factorialResult}");

        // Task 4
        ArraySorter arraySorter = new ArraySorter();
        int[] array = { 11, -2, 4, 35, 0, 8, -9 };
        arraySorter.SortArray(array);

        // Task 5
        DateTime date1 = new DateTime(1981, 11, 03);
        DateTime date2 = new DateTime(2013, 09, 04);
        DateDifferenceCalculator dateDiff = new DateDifferenceCalculator();
        dateDiff.CalculateDateDifference(date1, date2);

        // Task 6
        string dateString = "12-08-2004";
        StringToDateConverter stringToDate = new StringToDateConverter();
        stringToDate.ConvertStringToDate(dateString);
    }
}



